{
  "name": "react-vite-ts-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "tsc -b && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently -k \"npm:dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "node-hid": "^3.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.yourname.yourapp",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "directories": {
      "buildResources": "build-resources"
    }
  }
}
